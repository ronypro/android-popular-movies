<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/video_thumbnail_image_view"
        android:scaleType="centerCrop"
        tools:src="@android:drawable/presence_video_online"
        app:layout_widthPercent="100%"
        app:layout_aspectRatio="130%" />

    <TextView
        style="@style/TextAppearance.AppCompat.Medium"
        tools:text="Video name"
        android:layout_below="@id/video_thumbnail_image_view"
        android:id="@+id/video_name_text_view"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.percent.PercentRelativeLayout>